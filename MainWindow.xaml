<Window x:Class="Capital.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capital"
        mc:Ignorable="d"
        Title="КАПИТАЛ - сравнение стратегий" Height="800" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="510"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Депозит:" Margin="10,0"/>
        <TextBlock Text="Начальный лот:" Grid.Column="1"/>
        <TextBlock Text="Тейк:" Grid.Column="2"/>
        <TextBlock Text="Стоп:" Grid.Column="3"/>
        <TextBlock Text="Комиссия:" Grid.Column="4"/>
        <TextBlock Text="% прибыли:" Grid.Column="5"/>
        <TextBlock Text="Кол-во сделок:" Grid.Column="6"/>
        <TextBlock Text="Мин. % Депо:" Grid.Column="7"/>
        <TextBlock Text="Гарант.обесп.:" Grid.Column="8"/>



        <TextBox x:Name="_depo" Grid.Row="1" Margin="10,0,5,0"/>
        <TextBox x:Name="_startLot" Grid.Column="1" Grid.Row="1" Margin="5,0"/>
        <TextBox x:Name="_take" Grid.Column="2" Grid.Row="1" Margin="5,0"/>
        <TextBox x:Name="_stop" Grid.Column="3" Grid.Row="1" Margin="5,0"/>
        <TextBox x:Name="_comiss" Grid.Column="4" Grid.Row="1" Margin="5,0"/>
        <TextBox x:Name="_percentProfit" Grid.Column="5" Grid.Row="1" Margin="5,0"/>
        <TextBox x:Name="_countTrades" Grid.Column="6" Grid.Row="1" Margin="5,0"/>
        <TextBox x:Name="_minStartPercent" Grid.Column="7" Grid.Row="1" Margin="5,0"/>
        <TextBox x:Name="_go" Grid.Column="8" Grid.Row="1" Margin="5,0"/>
        <ComboBox Name="_comboBox" Grid.Column="9" Grid.Row="1" Margin="5,0" Visibility="Hidden"/>
        <Button Content="Рассчитать" Click="Button_Click" Grid.Column="10" Grid.Row="1" Margin="10,0"/>

        <GroupBox Header="Сравнение результатов стратегий" Grid.Row="2" Grid.ColumnSpan="11" Margin="10,1">
            <DataGrid x:Name="_dataGrid" Margin="5" AlternatingRowBackground="LightGray">
            </DataGrid>
        </GroupBox>
        
        <Canvas x:Name="_canvas"
                Grid.Row = "3"
                Grid.ColumnSpan="11"
                Margin="10,0" Background="Black">
        </Canvas>

        <TextBlock x:Name="_legend" Grid.Row="4" Grid.ColumnSpan="11" Margin="10,0" Background="Black" Text="Легенда"/>
    </Grid>
</Window>
