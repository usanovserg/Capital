<Window x:Class="MyCapital.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns:local="clr-namespace:MyCapital"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200" Background="#FFBFBFBF">
    <Grid Margin="10,0,0,0"  >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*"
                              MinWidth="50"
                              MaxWidth="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*" MinHeight="350"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Депозит" FontSize="14" FontWeight="Bold" 
                                Grid.Row="1"/>
        <TextBlock Text="Начальный лот" FontSize="14" FontWeight="Bold"
                                Grid.Row="2" />
        <TextBlock Text="Тейк" FontSize="14" FontWeight="Bold"
                                Grid.Row="3"/>
        <TextBlock Text="Стоп" FontSize="14" FontWeight="Bold"
                                Grid.Row="4"/>
        <TextBlock Text="Комиссия" FontSize="14" FontWeight="Bold"
                                Grid.Row="5"/>
        <TextBlock Text="% Процент приб." FontSize="14" FontWeight="Bold"
                                Grid.Row="6"/>
        <TextBlock Text="Кол-во сделок" FontSize="14" FontWeight="Bold"
                                Grid.Row="7"/>
        <TextBlock Text="Мин. %Депо"  FontSize="14" FontWeight="Bold"
                                Grid.Row="8"/>
        <TextBlock Text="Гарант. обеспечение" FontSize="14" FontWeight="Bold"
                                Grid.Row="10"/>
        <ComboBox x:Name="_comboBox" 
                  Grid.Row="12" 
                  Margin="0,0,10,0"
                  Padding="6,5,5,3" 
                  HorizontalContentAlignment="Center"
                  FontWeight="Bold" 
                  FontSize="14"/>
        

        <TextBox x:Name="_depo"
                 Grid.Column="1" Grid.Row="1"
                 Margin="0,1" 
                 Padding="5,4,0,0"/>
        <TextBox x:Name="_startLot"
                 Grid.Column="1" Grid.Row="2"
                 Margin="{Binding Margin, ElementName=_depo}"
                 Padding="{Binding Padding, ElementName=_depo, Mode=OneWay}"/>
        <TextBox x:Name="_take"
                 Grid.Column="1" Grid.Row="3"
                 Margin="{Binding Margin, ElementName=_depo}"
                 Padding="{Binding Padding, ElementName=_depo, Mode=OneWay}"/>
        <TextBox x:Name="_stop"
                 Grid.Column="1" Grid.Row="4"
                 Margin="{Binding Margin, ElementName=_depo}"
                 Padding="{Binding Padding, ElementName=_depo, Mode=OneWay}"/>
        <TextBox x:Name="_comiss"
                 Grid.Column="1" Grid.Row="5"
                 Margin="{Binding Margin, ElementName=_depo}"
                 Padding="{Binding Padding, ElementName=_depo, Mode=OneWay}"/>
        <TextBox x:Name="_percentProfit"
                 Grid.Column="1" Grid.Row="6"
                 Margin="{Binding Margin, ElementName=_depo}"
                 Padding="{Binding Padding, ElementName=_depo, Mode=OneWay}"/>
        <TextBox x:Name="_countTrades"
                 Grid.Column="1" Grid.Row="7"
                 Margin="{Binding Margin, ElementName=_depo}"
                 Padding="{Binding Padding, ElementName=_depo, Mode=OneWay}"/>
        <TextBox x:Name="_minStartPercent"
                 Grid.Column="1" Grid.Row="8"
                 Margin="{Binding Margin, ElementName=_depo}"
                 Padding="{Binding Padding, ElementName=_depo, Mode=OneWay}"/>
        <TextBox x:Name="_go"
                 Grid.Column="1" Grid.Row="10"
                 Margin="{Binding Margin, ElementName=_depo}"
                 Padding="{Binding Padding, ElementName=_depo, Mode=OneWay}"/>
        <Button Content="Рассчитать"
                Click="Button_Click"
                Grid.Column="1" Grid.Row="12"
                FontSize="16" FontWeight="Bold"
                Padding="0,-4,0,0"/>

        <GroupBox Header="Таблица результатов" 
                             Grid.Column="2" Grid.Row="1" Grid.RowSpan="5"
                             Margin="10,1">
            <DataGrid x:Name="_dataGrid" Margin="5"/>

        </GroupBox>


        <StackPanel Grid.Column="2" Grid.Row="9"  
                    Orientation="Horizontal">
            <CheckBox 
                Margin="30, 0, 0, 0" 
                Name="CB_Fix"
                Content="Fix" 
                FontSize="14" 
                Checked="CB_Checked" 
                Unchecked="CB_Checked" 
                IsChecked="True"  
                Width="120"/>
            <Rectangle Width="50" 
                       Height="20" 
                       Margin="0,-10,0,0" 
                       Fill="CornflowerBlue" 
                       Name="Rec_Fix"/>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="10" 
                    Orientation="Horizontal">
            <CheckBox 
                Margin="{Binding Margin, ElementName=CB_Fix}" 
                Name="CB_Cap"
                Content="Capitalization"
                FontSize="14" 
                Checked="CB_Checked" 
                Unchecked="CB_Checked"
                Width="{Binding Width, ElementName=CB_Fix}"/>
            <Rectangle Width="{Binding Width, ElementName=Rec_Fix}" 
                       Height="{Binding Height, ElementName=Rec_Fix}" 
                       Margin="0,-10,0,0" 
                       Fill="DarkRed" />
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="11" 
                    Orientation="Horizontal">
            <CheckBox 
                Margin="{Binding Margin, ElementName=CB_Fix}" 
                Name="CB_Prog"
                Content="Progress" 
                FontSize="14" 
                Checked="CB_Checked" 
                Unchecked="CB_Checked"
                Width="{Binding Width, ElementName=CB_Fix}"/>
            <Rectangle Width="{Binding Width, ElementName=Rec_Fix}" 
                       Height="{Binding Height, ElementName=Rec_Fix}" 
                       Margin="0,-10,0,0" 
                       Fill="DarkGreen" />
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="12" 
                    Orientation="Horizontal">
            <CheckBox 
                Margin="{Binding Margin, ElementName=CB_Fix}" 
                Name="CB_Dawn"
                Content="DownGrade" 
                FontSize="14" 
                Checked="CB_Checked" 
                Unchecked="CB_Checked"
                Width="{Binding Width, ElementName=CB_Fix}"/>
            <Rectangle Width="{Binding Width, ElementName=Rec_Fix}" 
                       Height="{Binding Height, ElementName=Rec_Fix}" 
                       Margin="0,-10,0,0" 
                       Fill="Orange" />
        </StackPanel>

        <ScottPlot:WpfPlot Name="WpfPlot1" 
                           Grid.Row="13" Grid.ColumnSpan="3" 
                           Margin ="0, 10, 10, 10"/>
        
    </Grid>
</Window>
